{%- set bpool_mb = [grains['mem_total'] / 10, 512] | max -%}
{%- set logfile_mb = bpool_mb / 4 -%}
{%- set joinbuf_mb = [grains['mem_total'] / 1000, 1] | max -%}
{%- set keybuf_mb = [grains['mem_total'] / 750, 5] | max -%}
{%- set maxconn = [grains['mem_total'] / 100, 5] | max -%}
{%- set tmpsize_mb = [grains['mem_total'] / 192, 16] | max -%}

[mysqld]

log_error = /var/log/mysql/error.log
long_query_time = 1
slow_query_log = ON
slow_query_log_file = /var/log/mysql/mariadb-slow.log

#
# Machine-specific tuning
#
innodb_buffer_pool_size = {{ bpool_mb | round | int }}M
innodb_log_file_size = {{ logfile_mb | round | int }}M
join_buffer_size = {{ joinbuf_mb | round | int }}M
key_buffer_size = {{ keybuf_mb | round | int }}M
max_connections = {{ maxconn | round | int }}
max_heap_table_size = {{ tmpsize_mb | round | int }}M
tmp_table_size = {{ tmpsize_mb | round | int }}M

#
# General tuning
#
innodb_file_per_table = ON
innodb_stats_on_metadata = OFF
performance_schema = ON
query_cache_size = 0
query_cache_type = OFF
skip-name-resolve = ON
