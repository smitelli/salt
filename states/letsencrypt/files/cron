LANG=en_US.UTF-8
LC_ALL=en_US.UTF-8

# Each certificate takes about 6 seconds to renew. Bear in mind that nginx will
# be stopped for the entirety of the process.
 0 9  * * * root /usr/local/bin/certbot renew --quiet --pre-hook '/usr/sbin/service nginx stop' --post-hook '/usr/sbin/service nginx start'
20 8 27 * * root /usr/local/bin/certbot renew --quiet --force-renewal --pre-hook '/usr/sbin/service nginx stop' --post-hook '/usr/sbin/service nginx start'
